<%= render "shared/header" %>

<body>
  <div id="wrapper">
  <div class="date">
      - <%= @date %>
      (<%= @wday %>) -
  </div>
    <div class="show-main">
      <div class="personal">
        <%= "#{current_user.name} さん" %><br>
        <ul class="profile">
          <li>　性別：<%= @gender %>性</li>
          <li>　年齢：<%= @age %> 歳</li>
          <li>　身長：<%= current_user.height %> cm</li>
          <li>　体重：<%= current_user.weight %> kg</li>
          <li>　適正体重：<%= @best_w.round(1) %> kg</li>
          <li>　BMI：<%= @bmi.round(2) %></li>
      </div>

      <div class="graph">
        <p id="notice"><%= notice %></p>

        <h1 class="graph-title">今週の摂取予定栄養素</h1>

        <%= bar_chart @nutrient_graph, height: "40vh", width: "80vh", precision: 3, max: 100, suffix: "%" %>
        <%= link_to 'New Product', new_nutrient_path %>
    </div>
    </div>
  </div>
</body>

<%= render "shared/footer" %>