<%= render "shared/header" %>

<body>
<div id="wrapper">
    <%= form_with model: @nutrient, local: true do |f| %>
      <div class="form">
        <div class="weight-bold-text">
          購入した食材
          <span class="indispensable">必須</span>
        </div>
        <% 2.times do %>
        <div class="food-input">
          <%= f.collection_select(:food_id, First.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
          <%= f.collection_select(:number_id, Number.all, :id, :name, {}, {class:"food-number-input", id:"item-category"}) %>
          <div class="food-number">個</div>
        </div>
        <% end %>
          <%= f.submit "登録する" ,class:"sell-btn" %>
    <% end %>
</div>
</body>

<%= render "shared/footer" %>